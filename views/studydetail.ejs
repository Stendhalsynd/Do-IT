<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/static/style/css/common/header.css" />
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <title>스터디 상세보기</title>
  <style>
    .divider--thick {
      width: 95vw;
      height: 6px;
      background-color: lightgray;
      border-radius: 20px;
    }

    .divider--thin {
      width: 95vw;
      height: 1.5px;
      background-color: lightgray;
    }

    .list--leader {
      display: none;
    }
  </style>
</head>

<body>
  <header class="header">
    <img src="/static/images/Do-IT logo.png" alt="Do-IT logo" class="header__logo" />
    <div class="header__button">
      <button class="header__button--practice">연습하기</button>
      <button class="header__button--study">스터디</button>
      <button class="header__button--sign-in">로그인</button>
    </div>
  </header>

  <h4><%= data.title %></h4>
  <div class="divider--thick"></div>
  <br />
  <div class="container__button"></div>
  <br />
  <div>모집현황<span><%= data.memCurr%>/<%= data.memTotal %></span></div>
  <% data.Themes.forEach(theme => { %>
  <span><%= theme.dataValues.category %></span>
  <% }); %>
  <div><%= startDate %> ~ <%= endDate %></div>
  <div><%= data.intro %></div>
  <div class="divider--thin"></div>
  <br />
  <ul class="container__list">
    <% members.forEach((member) => { %>
    <li class="container__list--member">
      <h2><%= member.status %></h2>
      <p>Nickname: <%= member.nickname %></p>
      <p>Link: <%= member.link %></p>
    </li>
    <% }); %>
  </ul>
  <div class="list--leader">
    <br />
    <div class="divider--thick"></div>
    <br>
    <ul class="container__list">
      <% appliers.forEach((applier) => { %>
      <li class="container__list--applier">
        <h2><%= applier.status %></h2>
        <p>Nickname: <%= applier.nickname %></p>
        <p>Link: <%= applier.link %></p>
        <button>수락</button>
        <button>거절</button>
      </li>
      <% }); %>
    </ul>
  </div>

</body>

<script>
  // 개설자 혹은 참여자 여부를 확인하기 위해 즉시 실행함수 생성
  (async function() {
    const studyId = "<%= data.id %>";

    /** 모집하기 / 지원하기 버튼 */
    // 지원하기 혹은 모집완료 버튼이 들어갈 컨테이너 생성
    const btnContainer = document.querySelector(".container__button");

    // 지원하기 버튼 생성
    const applyBtn = document.createElement("button");
    applyBtn.classList.add("container__button--apply");
    applyBtn.textContent = "지원하기";

    // 모집완료 버튼 생성
    const doneBtn = document.createElement("button");
    doneBtn.classList.add("container__button--done");
    doneBtn.textContent = "모집완료";

    /** 지원한 크루 */
    const appliers = document.querySelector('.list--leader');

    // 개설자 혹은 참여자 여부에 따른 로직 실행
    try {
      const res = await axios({
        method: "post",
        url: `/study/list/${studyId}`,
        data: {
          studyId
        },
        headers: {
          Authorization: `Bearer ${localStorage.getItem("userToken")}`,
        },
      });

      const {
        isLeader,
        study,
        isCrew = !isLeader
      } = res.data;
      const isAccepting = study.memCurr < study.memTotal;

      // 크루원일때 모집상황에 따라 버튼 append
      if (isCrew) {
        const innerBtn = isAccepting ? applyBtn : doneBtn;
        btnContainer.appendChild(innerBtn);
      }

      // 리더일때 지원한 크루 목록 조회
      if (isLeader) {
        appliers.style.display = 'block'
      }

    } catch (error) {
      console.log(error);
    }
  })();
</script>

<script src="/static/script/common/modal.js"></script>
<script src="/static/script/common/signIn.js"></script>
<script src="/static/script/common/signUp.js"></script>

</html>